<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_8"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWordFragmentWord"
                style="@style/text_view_style_heading" />


            <TextView
                android:id="@+id/tvWordFragmentMeaning"
                style="@style/text_view_style_content"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginLeft="@dimen/size_24" />

            <TextView
                android:id="@+id/tvWordFragmentSentence"
                style="@style/text_view_style_content"
                android:layout_marginTop="@dimen/size_8"
                android:textStyle="italic" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icWordFragmentMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_4"
            android:layout_marginRight="@dimen/size_4"
            android:contentDescription="@string/edit"
            android:padding="@dimen/size_8"
            android:src="@drawable/ic_menu" />
    </LinearLayout>


    <View style="@style/view_divider" />
</LinearLayout>